@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>You can add or select Items.</p>

<table class="table">
    <tr>
        <th>Name </th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>

    </tr>



    @foreach (var element in ViewBag.Clist)
    {
        <tr>

            <td>@element.Name</td>
            <td>@element.Description</td>
            <td>@element.Quantity</td>
            <td>@element.Price</td>
            <td><a href="/Home/DeleteItem?ItemID=@element.Name" onclick="return confirm ('Are you sure?')">Delete</a></td>


        </tr>




    }
</table>

<a href="/Home/AddingNewItem">Add a new Item </a>